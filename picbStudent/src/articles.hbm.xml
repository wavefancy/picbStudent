<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="wavefancy">
	<class name="Articles" table="particle">
		<id name="id" column="id">
			<generator class="identity" />
		</id>

		<property name="aTitle" column="aTitle" />
		<property name="aAbstract" column="aAbstract" />
		<property name="aAuthorId" column="aAuthorId" />
		<property name="aReadTimes" column="aReadTimes" />
		<property name="aContent" column="aContent" />
		<property name="pGroupid" column="pGroupId" />
		<property name="aImg" column="aImg" />
		<property name="aDate" column="adate" />
		
	</class>
</hibernate-mapping>